{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm p-4">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Register</h1>

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        {#                        {{ csrf_token('csrfid') }} #}

                        {{ form_errors(form) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.roles) }}
                        </div>

                        <div class="d-grid">
                            {{ form_row(form.submit, {
                                'label': 'Edit Account',
                                'row_attr': {'class': 'd-grid'},
                                'attr': {'class': 'btn btn-primary btn-lg'}
                            }) }}
                        </div>

                        {{ form_end(form) }}
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_user_show') }}" class="btn btn-light">
                            Back to list
                        </a>
                        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </div>

                </div>



                <div class="text-center mt-3">
                    <p>Already have an account? <a href="#">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
