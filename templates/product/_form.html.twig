{{ form_start(form) }}
<div class="mb-3">
    {{ form_row(form.name) }}
</div>

<div class="mb-3">
    {{ form_row(form.description) }}
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_row(form.price) }}
    </div>
