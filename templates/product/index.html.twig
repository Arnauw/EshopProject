{% extends 'base.html.twig' %}

{% block title %}Manage Products{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Products</h1>
                    <a href="{{ path('app_product_new') }}" class="btn btn-primary">
                        Create New
                    </a>
                </div>

                {% if products is not empty %}
                    <div class="row text-muted fw-bold d-none d-md-flex mb-2 px-3">
                        <div class="col-md-4">Product</div>
                        <div class="col-md-3">Subcategory</div>
                        <div class="col-md-2">Price</div>
                        <div class="col-md-3 text-end">Actions</div>
                    </div>

                    <div class="list-group shadow-sm">
                        {% for product in products %}
                            <div class="list-group-item">
                                <div class="row align-items-center">

                                    <div class="col-12 col-md-4 mb-2 mb-md-0">
                                        <span class="fw-bold">{{ product.name }}</span>
                                        <small class="d-block text-muted">{{ product.description|slice(0, 60) }}{{ product.description|length > 60 ? '...' : '' }}</small>
                                    </div>

                                    <div class="col-12 col-md-3 mb-2 mb-md-0">
                                        {% if product.subcategory %}
                                            <span class="badge bg-info text-dark fw-normal">{{ product.subcategory.current.name }}</span>
                                        {% else %}
                                            <span class="text-muted fst-italic">None</span>
                                        {% endif %}
                                    </div>

                                    <div class="col-12 col-md-2 mb-2 mb-md-0">
                                        <span class="fw-bold">{{ product.price|number_format(2, ',', ' ') }} â‚¬</span>
                                    </div>

                                    <div class="col-12 col-md-3 text-md-end">
                                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-light btn-sm">Edit</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-info mb-0">
                        No products found. <a href="{{ path('app_product_new') }}" class="alert-link">Create the first one!</a>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
