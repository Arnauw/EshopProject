{# templates/sub_category/_delete_form.html.twig #}

<form method="post" action="{{ path('app_subCategory_delete', {'id': sub_category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">

    {# Add btn-danger to make the button red #}
    <button class="btn btn-danger">Delete</button>
</form>
