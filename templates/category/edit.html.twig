{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <h1 class="card-title text-center mb-4">Edit {{ category.name }}</h1>

                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.name) }}
                        </div>

                        <div class="d-grid mt-4">
                            {{ form_row(form.submit, {
                                'label': 'Edit Category',
                                'row_attr': {'class': 'd-grid'},
                                'attr': {'class': 'btn btn-primary btn-lg'}
                            }) }}
                        </div>

                        {{ form_end(form) }}

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_category_show') }}" class="btn btn-light">
                                Back to list
                            </a>
                            <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                Delete
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
